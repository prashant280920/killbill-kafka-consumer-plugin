    <artifactId>kafka-consumer-plugin</artifactId>
    <version>2.0.1-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>kafka-consumer-plugin</name>
    <description>OSGI Kafka Consumer plugin</description>
    <url>http://github.com/prashant280920/killbill-kafka-consumer-plugin</url>
    <scm>
        <connection>scm:git:git://github.com/prashant280920/killbill-kafka-consumer-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:prashant280920/killbill-kafka-consumer-plugin.git</developerConnection>
        <url>http://github.com/prashant280920/killbill-kafka-consumer-plugin/tree/main</url>
    </scm>
    <issueManagement>
        <system>Github</system>
        <url>https://github.com/prashant280920/killbill-kafka-consumer-plugin/issues</url>
    </issueManagement>
    <properties>
        <check.skip-dependency>true</check.skip-dependency>
        <check.skip-dependency-scope>true</check.skip-dependency-scope>
        <check.skip-dependency-versions>true</check.skip-dependency-versions>
        <check.skip-duplicate-finder>true</check.skip-duplicate-finder>
        <check.skip-enforcer>true</check.skip-enforcer>
        <check.skip-rat>true</check.skip-rat>
        <check.skip-spotbugs>true</check.skip-spotbugs>
        <logstack-logback.version>7.0.1</logstack-logback.version>
        <osgi.private>org.killbill.billing.kafkaConsumerPlugin.*</osgi.private>
    </properties>
